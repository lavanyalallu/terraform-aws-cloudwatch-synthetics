data "aws_iam_policy_document" "s3_bucket_policy" {
  statement {
    sid    = "AllowCloudWatchSyntheticsAccess"
    effect  = "Allow"
    principals {
      type        = "AWS"
      identifiers = [aws_iam_role.canary_role.arn]
    }
    actions   = [
      "s3:GetObject",
      "s3:PutObject",
      "s3:GetBucketLocation",
      "s3:ListBucket"
    ]
    resources = [
      "${module.canary_s3[0].bucket.arn}",
      "${module.canary_s3[0].bucket.arn}/*"
    ]
  }
}


